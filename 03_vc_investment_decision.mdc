term_sheet_questions:
  - key: "target_company"
    question: "投資対象企業名を入力してください"
    required: true
    
  - key: "investment_amount"
    question: "投資金額を入力してください"
    required: true
    
  - key: "pre_money_valuation"
    question: "プレマネーバリュエーションを入力してください"
    required: true
    
  - key: "security_type"
    question: "証券の種類を選択してください"
    options:
      - "優先株式"
      - "普通株式"
      - "転換社債"
      - "SAFE"
      - "その他"
    required: true
    
  - key: "liquidation_preference"
    question: "清算優先権の倍率を入力してください（例：1x, 2x）"
    required: true
    
