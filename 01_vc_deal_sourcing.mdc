# ========== 01_vc_deal_sourcing.mdc ==================
# Deal Sourcing & Screening フェーズ
# 投資機会の発掘・評価・初期スクリーニングプロセス

#============================
# 投資機会評価 - 質問セット
#============================
opportunity_assessment_questions:
  - key: "target_company"
    question: "投資検討対象企業名を入力してください"
    required: true
    
  - key: "company_stage"
    question: "企業のステージを選択してください"
    options:
      - "Pre-Seed"
      - "Seed"
      - "Series A"
      - "Series B"
      - "Series C"
      - "Series D+"
      - "Growth/Late Stage"
      - "Pre-IPO"
    required: true
    
  - key: "industry_sector"
    question: "業界・セクターを選択してください"
    options:
      - "SaaS/Enterprise Software"
      - "Fintech"
      - "Healthcare/Biotech"
      - "EdTech"
      - "E-commerce/Marketplace"
      - "Consumer Apps"
      - "AI/ML"
      - "IoT/Hardware"
      - "Mobility/Transportation"
      - "Real Estate Tech"
      - "Gaming"
      - "Media/Content"
      - "Energy/CleanTech"
      - "Agriculture Tech"
      - "その他"
    required: true
    
  - key: "business_model"
    question: "ビジネスモデルを簡潔に説明してください（100文字以内）"
    required: true
    
  - key: "target_market"
    question: "ターゲット市場を具体的に教えてください"
    required: true
    
  - key: "current_metrics"
    question: "現在の主要メトリクス（ARR、MAU、GMVなど）があれば教えてください"
    required: false
    
  - key: "funding_history"
    question: "過去の資金調達履歴を教えてください"
    required: false
    
  - key: "team_background"
    question: "創業チームの背景・経歴を簡潔に教えてください"
    required: true
    
  - key: "competitive_advantage"
    question: "競合に対する優位性・差別化要因を教えてください"
    required: true
    
  - key: "growth_potential"
    question: "成長のポテンシャル・スケーラビリティについて教えてください"
    required: true
    
  - key: "exit_potential"
    question: "想定されるExit戦略・可能性について教えてください"
    required: false
    
  - key: "risk_factors"
    question: "主要なリスク要因があれば教えてください"
    required: false

